<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <meta name="url" content="https://rental.com">
    <meta name="author" content="carlo papasin">
    @RenderSection("Metas", required: false)
    <link rel="icon" href="~/favicon.ico">
    <link rel="stylesheet" href="~/assets/css/be.min.css">
    <link rel="stylesheet" href="~/assets/css/be.theme.min.css">
    <style>
        body {
            display: none;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
